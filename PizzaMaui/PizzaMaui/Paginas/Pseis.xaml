<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PizzaMaui.Paginas.Pseis"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Pseis"
             BackgroundColor="#FFF5E6"
             NavigationPage.HasNavigationBar="False">
    
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="#BF422F"/>
    </ContentPage.Behaviors>

    <VerticalStackLayout>
        <Image Source="p6.png" WidthRequest="430" HeightRequest="270"/>

        <Label 
        Text="M A R G H E R I T A   -   6 5 , 0 0 "
        FontSize="Large"
           
        Margin="20"/>

        <Label 
        Text="Molho de tomate, manjericão, mozzarella de búfala, parmesão e azeite."
        FontSize="Large"
        VerticalOptions="Center"     
        HorizontalOptions="Center" Margin="20"/>

        <Button Text="Voltar"
        TextColor="Black"
        WidthRequest="250"
        x:Name="btnVoltarPseis"
        Clicked="btnVoltarPseis_Clicked"
        BackgroundColor="#457430"
                Margin="30"/>

    </VerticalStackLayout>
</ContentPage>