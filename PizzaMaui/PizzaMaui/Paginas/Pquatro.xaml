<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PizzaMaui.Paginas.Pquatro"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Pquatro"
             BackgroundColor="#FFF5E6"
             NavigationPage.HasNavigationBar="False">
    
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="#BF422F"/>
    </ContentPage.Behaviors>

    <VerticalStackLayout>
        <Image Source="p4.png" WidthRequest="430" HeightRequest="270"/>

        <Label 
        Text="F U N G H I - 6 7 , 0 0"
        FontSize="Large"
           
        Margin="20"/>

        <Label 
        Text="Molho de tomate, mozzarella fiordilatte, cogumelos assados no forno a lenha, manjericão e parmesão."
        FontSize="Large"
        VerticalOptions="Center"     
        HorizontalOptions="Center" Margin="20"/>

        <Button Text="Voltar"
        TextColor="Black"
        WidthRequest="250"
        x:Name="btnVoltarPquatro"
        Clicked="btnVoltarPquatro_Clicked"
        BackgroundColor="#457430"
                Margin="30"/>

    </VerticalStackLayout>
</ContentPage>