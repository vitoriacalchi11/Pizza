<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PizzaMaui.Paginas.Pcinco"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Pcinco"
             BackgroundColor="#FFF5E6"
             NavigationPage.HasNavigationBar="False">
    
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="#BF422F"/>
    </ContentPage.Behaviors>

    <VerticalStackLayout>
        <Image Source="p2.png" WidthRequest="430" HeightRequest="270"/>

        <Label 
        Text="S I G N O R I N A   -  7 7 , 0 0"
        FontSize="Large"
           
        Margin="20"/>

        <Label 
        Text="Tomates italianos assados, rúcula selvática, prosciutto crudo italiano, mozzarella de búfala “Cigliegina” , lascas de Grana Padano e azeite."
        FontSize="Large"
        VerticalOptions="Center"     
        HorizontalOptions="Center" Margin="20"/>

        <Button Text="Voltar"
        TextColor="Black"
        WidthRequest="250"
        x:Name="btnVoltarPcinco"
        Clicked="btnVoltarPcinco_Clicked"
        BackgroundColor="#457430"
                Margin="30"/>

    </VerticalStackLayout>
</ContentPage>