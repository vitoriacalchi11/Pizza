<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PizzaMaui.Paginas.Perfil"
             Title="Perfil">
    <VerticalStackLayout>

        <Label 
            Text="Perfil"
            FontSize="32"
            VerticalOptions="Center" 
            HorizontalOptions="Center" Margin="40"/>
        
        
        

        <Label 
            Text="Nome :"
            FontSize="Large" Margin="70"/>


        <Frame Padding="5">
            <Entry x:Name="txtNome" 
                Text="{Binding Nome}"
                Placeholder="Digite seu Nome..." 
                PlaceholderColor="Gray"
                Keyboard="Text"/>
        </Frame>

        <Image Source="linea.png" Margin="10"  />7
        
        
        

        <Label 
            Text="Email :"
            FontSize="Large" Margin="70"/>


        <Frame Padding="5">
            <Entry x:Name="txtEmail" 
                Text="{Binding Email}"
                Placeholder="Digite seu Email..." 
                PlaceholderColor="Gray"
                Keyboard="Email"/>
        </Frame>

        <Image Source="linea.png" Margin="10"  />


    </VerticalStackLayout>
</ContentPage>